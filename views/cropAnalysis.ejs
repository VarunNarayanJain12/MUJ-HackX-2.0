<%- include("layout/mainPageHeader.ejs") %>
<style>
  .hero, .farmer-community {
    background-color: #EAF4F2;
  }
</style>
<div class="container hero">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% if (counter % 2 == 0) { %>
        <h1 class="text-center" style="font-weight: bolder; color: #269d9d;">Crop Analysis</h1>
        <form action="/cropAnalysis/submit" method="post">
          <div class="form-row">
            <div class="col">
              <input type="text" class="form-control" placeholder="First name" name="firstName">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Last name" name="lastName">
            </div>
          </div>
          <br>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Email:</label>
              <input type="email" class="form-control" id="inputEmail4" placeholder="Email" name="email">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Password:</label>
              <input type="password" class="form-control" id="inputPassword4" placeholder="Password" name="password">
            </div>
          </div>
          <select class="form-select" aria-label="Default select example" name="crop" required>
            <option>Select a Crop</option>
            <option value="Brinjal">Brinjal</option>
            <option value="Carrot">Carrot</option>
            <option value="Coffee">Coffee</option>
            <option value="Sugarcane">Sugarcane</option>
          </select>
          <br>
          <select class="form-select" aria-label="Default select example" name="cropStage">
            <option selected>Select its stage</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
          <br>
          <select class="form-select" aria-label="Default select example" name="irrigationPractice">
            <option selected>Irrigation practice</option>
            <option value="1">Surface irrigation</option>
            <option value="2">Sprinkler Irrigation</option>
            <option value="4">Well and tube</option>
            <option value="5">Canal irrigation</option>
            <option value="6">Tank</option>
            <option value="7">Drip irrigation</option>
            <option value="8">Surge irrigation</option>
            <option value="9">Ditch irrigation</option>
            <option value="10">Sub-irrigation</option>
          </select>
          <br>
          <div class="form-group">
            <label for="inputAddress">Soil type:</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="Enter your soil type" name="soilType">
          </div>
          <div class="form-group">
            <label for="inputAddress2">Address 2</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor" name="address2">
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputCity">City</label>
              <input type="text" class="form-control" id="inputCity" name="city">
            </div>
            <div class="form-group col-md-4">
              <label for="inputState">State</label>
              <select id="inputState" class="form-control" name="state">
                <option selected>Choose...</option>
                <option value="AL">Alabama</option>
                <option value="AK">Alaska</option>
                <!-- Add other states -->
              </select>
            </div>
            <div class="form-group col-md-2">
              <label for="inputZip">Zip</label>
              <input type="text" class="form-control" id="inputZip" name="zip">
            </div>
          </div>
          <div class="form-group">
            <!-- You may add a checkbox or other form elements here if needed -->
          </div>
          <input type="submit" class="btn btn-success" value="SUBMIT">
        </form>
      <% } else { %>
        <% if (Crop) { %>
          <div class="result">
            <img src="/images/cropAnalysis/<%= Crop %>.jpg" alt="Please Select a Crop" class="analysis">
          </div>
          <form action="/login" method="get">
            <input type="submit" value="Go to Login Page" class="btn btn-primary btn-lg btn-block">
          </form>
          <br>
          <form action="/cropAnalysis" method="get">
            <input type="submit" value="Back to Previous Page" class="btn btn-primary btn-lg btn-block">
          </form>
        <% } %>
      <% } %>
      <div class="embed-responsive embed-responsive-16by9">
      </div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
<%- include("layout/mainPageFooter.ejs") %>

